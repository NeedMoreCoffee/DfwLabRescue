@model IEnumerable<DfwLabRescue.Web.Models.Dog>

@{
    ViewBag.Title = "Index";
}

<!--=== Breadcrumbs ===-->
<div class="breadcrumbs">
    <div class="container">
        <h1 class="pull-left">Dogs</h1>
        <ul class="pull-right breadcrumb">
            <li><a href="~/Admin/Dogs">Admin</a></li>
            <li class="active">Dogs</li>
        </ul>
    </div>
</div><!--/breadcrumbs-->
<!--=== End Breadcrumbs ===-->
<div class="container content" ng-controller="AdminDogCtrl">
    <div class="row margin-bottom-40">

        <div class="col-xs-6 col-md-10">
            <div class="input-group">
                <input type="text" class="form-control" placeholder="Search..." ng-model="query">
                <span class="input-group-btn">
                    <button class="btn-u" type="button"><i class="fa fa-search"></i></button>
                </span>
            </div>
        </div>
        <div class="col-xs-6 col-md-2" >
            <a href="~/admin/dogs/add" class="btn-u btn-u-large"><i class="fa fa-plus-square"></i>&nbsp; ADD NEW DOG</a>
        </div>
    </div>
    <div class="row">
        <div class="panel panel-grey">
            <div class="panel-heading">
            </div>
            <table class="table">
                <tr>
                    <th>
                        Name
                    </th>
                    <th>
                        Date of Birth
                    </th>
                    <th>
                        Age
                    </th>
                </tr>

                <tr ng-repeat="dog in dogs | filter:query">
                    <td>{{dog.Name}}</td>
                    <td>{{dog.DateOfBirth}}</td>
                    <td>{{dog.Age}}</td>
                </tr>
